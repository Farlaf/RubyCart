<h1>Dashboard</h1>
<div class="mt-8 w-full">
  <h2 class="text-2xl font-medium mb-4">Daily Stats:</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="bg-white rounded-md border border-gray-100 p-6 shadow-md shadow-black/5">
      <div class="flex justify-between mb-6">
        <div>
          <div class="flex items-center mb-1">
            <div class="text-2xl font-semibold"><%= number_to_currency(@quick_stats[:revenue]) %></div>
          </div>
          <div class="text-sm font-medium text-gray-400">Revenue</div>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-md border border-gray-100 p-6 shadow-md shadow-black/5">
      <div class="flex justify-between mb-6">
        <div>
          <div class="flex items-center mb-1">
            <div class="text-2xl font-semibold"><%= @quick_stats[:sales] %></div>
          </div>
          <div class="text-sm font-medium text-gray-400">Total Sales</div>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-md border border-gray-100 p-6 shadow-md shadow-black/5">
      <div class="flex justify-between mb-6">
        <div>
          <div class="flex items-center mb-1">
            <div class="text-2xl font-semibold"><%= number_to_currency( @quick_stats[:avg_sale]) %></div>
          </div>
          <div class="text-sm font-medium text-gray-400">Total Sales</div>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-md border border-gray-100 p-6 shadow-md shadow-black/5">
      <div class="flex justify-between mb-6">
        <div>
          <div class="flex items-center mb-1">
            <div class="text-2xl font-semibold"><%= @quick_stats[:per_sale].to_i %></div>
          </div>
          <div class="text-sm font-medium text-gray-400">Items/Sale</div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="mt-8 w-full">
  <h2 class="text-2xl font-medium mb-4">Revenue</h2>
  <div data-controller="dashboard">
    <canvas id="revenueChart"></canvas>
  </div>
</div>
