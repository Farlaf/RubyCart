<div id="admin_orders" class="min-w-full">
  <div class="relative overflow-auto">
    <div class="my-8">
      <table class="table-auto border-collapse w-full text-sm">
        <thead>
          <tr>
            <th class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 text-left">
              ID</th>
            <th class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 text-left">
              Customer email</th>
            <th class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 text-left">
              Address</th>
            <th class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 text-left">
              Total</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% orders.each do |o| %>
            <tr>
              <td class="border-b border-slate-100 p-4 pl-8 text-slate-500 underline">
                <%= link_to o.id, edit_admin_order_path(o) %>
              </td>
              <td class="border-b border-slate-100 p-4 pl-8 text-slate-500">
                <%= o.customer_email %>
              </td>
              <td class="border-b border-slate-100 p-4 pl-8 text-slate-500">
                <%= o.address %>
              </td>
              <td class="border-b border-slate-100 p-4 pl-8 text-slate-500">
                <%= number_to_currency o.total %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
